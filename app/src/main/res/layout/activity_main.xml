<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <androidx.gridlayout.widget.GridLayout
            android:layout_width="360dp"
            android:layout_height="330dp"
            app:layout_constraintVertical_bias="0.498"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp" android:id="@+id/gridLayout"
            app:layout_constraintTop_toBottomOf="@+id/timeText" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/ScoreText">
        <ImageView app:layout_column="0"
                   android:layout_width="120dp"

                   android:layout_height="110dp" app:srcCompat="@mipmap/ic_launcher_round" tools:layout_editor_absoluteY="-4dp"
                   tools:layout_editor_absoluteX="33dp"
                   android:id="@+id/imageView1" app:layout_row="0"

                   android:onClick="increaseScore"/>
        <ImageView app:layout_column="1"
                   android:layout_width="120dp"
                   android:onClick="increaseScore"
                   android:layout_height="110dp" app:srcCompat="@mipmap/ic_launcher_round"
                   tools:layout_editor_absoluteY="-4dp"
                   tools:layout_editor_absoluteX="33dp" android:id="@+id/imageView2" app:layout_row="0"

        />
        <ImageView app:layout_column="2"
                   android:layout_width="120dp"
                   android:onClick="increaseScore"
                   android:layout_height="110dp" app:srcCompat="@mipmap/ic_launcher_round" tools:layout_editor_absoluteY="-4dp"
                   tools:layout_editor_absoluteX="33dp" android:id="@+id/imageView3" app:layout_row="0"

        />
        <ImageView app:layout_column="0"
                   android:layout_width="120dp"
                   android:onClick="increaseScore"
                   android:layout_height="110dp" app:srcCompat="@mipmap/ic_launcher_round" tools:layout_editor_absoluteY="-4dp"
                   tools:layout_editor_absoluteX="33dp" android:id="@+id/imageView4" app:layout_row="1"

        />
        <ImageView app:layout_column="1"
                   android:layout_width="120dp"
                   android:onClick="increaseScore"
                   android:layout_height="110dp" app:srcCompat="@mipmap/ic_launcher_round" tools:layout_editor_absoluteY="-4dp"
                   tools:layout_editor_absoluteX="33dp" android:id="@+id/imageView5" app:layout_row="1"

        />
        <ImageView app:layout_column="2"
                   android:layout_width="120dp"
                   android:onClick="increaseScore"
                   android:layout_height="110dp" app:srcCompat="@mipmap/ic_launcher_round"
                   tools:layout_editor_absoluteY="-4dp"
                   tools:layout_editor_absoluteX="33dp" android:id="@+id/imageView6" app:layout_row="1"
                   android:contentDescription="object"/>
        <ImageView app:layout_column="0"
                   android:layout_width="120dp"
                   android:onClick="increaseScore"
                   android:layout_height="110dp" app:srcCompat="@mipmap/ic_launcher_round" tools:layout_editor_absoluteY="-4dp"
                   tools:layout_editor_absoluteX="33dp" android:id="@+id/imageView7" app:layout_row="2"

        />
        <ImageView app:layout_column="1"
                   android:layout_width="120dp"
                   android:onClick="increaseScore"
                   android:layout_height="110dp" app:srcCompat="@mipmap/ic_launcher_round" tools:layout_editor_absoluteY="-4dp"
                   tools:layout_editor_absoluteX="33dp" android:id="@+id/imageView8" app:layout_row="2"

        />
        <ImageView app:layout_column="2"
                   android:layout_width="120dp"
                   android:onClick="increaseScore"
                   android:layout_height="110dp" app:srcCompat="@mipmap/ic_launcher_round" tools:layout_editor_absoluteY="-4dp"
                   tools:layout_editor_absoluteX="33dp" android:id="@+id/imageView9" app:layout_row="2"

        />


    </androidx.gridlayout.widget.GridLayout>
    <TextView
            android:text="Timer: 10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timeText" android:gravity="center"
            android:textSize="24sp" android:textAlignment="center" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/gridLayout" android:layout_marginTop="32dp"/>
    <TextView
            android:text="Score: 0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ScoreText"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp" android:gravity="center"
            android:textAlignment="center" android:textSize="18sp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gridLayout" android:layout_marginBottom="32dp"/>
    <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/button2" android:visibility="invisible"
            android:onClick="changeactivity" android:background="#00FFFFFF"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>